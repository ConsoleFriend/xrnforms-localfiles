<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XrnCourse.LocalFiles.Pages.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Read embedded file" Command="{Binding OpenEmbeddedFilePageCommand}"></Button>
            <Button Text="Save and Load a file" Command="{Binding OpenSaveAndLoadPageCommand}"></Button>
            <Button Text="Save settings with PCL Storage" Command="{Binding OpenPluginPageCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>