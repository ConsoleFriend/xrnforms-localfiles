<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XrnCourse.LocalFiles.Pages.SaveAndLoadPage"
             Title="Save And Load Text">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Clear contents" Command="{Binding ClearContentsCommand}"></Button>
            <Editor HeightRequest="200" Text="{Binding FileContents}" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Load" Command="{Binding LoadFileCommand}"></Button>
                <Button Text="Save" Command="{Binding SaveFileCommand}"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>